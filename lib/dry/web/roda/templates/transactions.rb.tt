require "dry-configurable"
require "dry-transaction"
require "<%= config[:underscored_project_name] %>/container"

module <%= config[:camel_cased_app_name] %>
  class Transactions
    extend Dry::Configurable

    attr_reader :options

    setting :container, <%= config[:camel_cased_app_name] %>::Container
    setting :options, {}

    def self.define(&block)
      yield(new(options))
    end

    def self.options
      {container: config.container}.merge(config.options)
    end

    def initialize(options)
      @options = options
    end

    def container
      options[:container]
    end

    def define(name, &block)
      container.register(name, Dry.Transaction(options, &block))
    end
  end
end
